(function() {
  function hideEmptyDividers() {
    $("#utility .custom-html").each(function(index,element){
      // Define selectors which should be treated as content
      var contentSelectors = ".nohide, img, object, embed, video, iframe";
      if ($(element).children(contentSelectors).length == 0) {
        $(element).next(".divider").hide();
        $(element).hide();
      }
    });
  }
  if (window.addEventListener)
    window.addEventListener("load", hideEmptyDividers, false);
  else if (window.attachEvent)
    window.attachEvent("onload", hideEmptyDividers);
  else window.onload = hideEmptyDividers;
})();
</script>
