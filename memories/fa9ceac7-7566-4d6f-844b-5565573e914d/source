                    newHeight = parseInt(newHeight);
                    if(newHeight < 250){ newHeight = 250; }
                    document.getElementById('ad_300_frame').style.height = newHeight + 'px';
                    $('#ad_300_frame').css('height', newHeight+'px');
                }
              </script>
                
                  </div>
    	
