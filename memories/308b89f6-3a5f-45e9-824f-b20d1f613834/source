          $(function(){
            var stickyAd = $('#ible-stickyad'),
                stickyAdHeight = stickyAd.height(),
                stickyAdTop = stickyAd.offset().top,
                sidebar = $('#sidebar'),
                mainContent = $('#main-content');

            $('#ible-sticky-wrapper').height(stickyAdHeight);
            $(window).bind('scroll.iblestickyad', function(){
              var scrollTop = $(window).scrollTop(),
                  sidebarHeight = sidebar.height(),
                  sidebarBottomOffset = sidebarHeight + sidebar.offset().top,
                  mainContentHeight = mainContent.height(),
                  mainContentBottomOffset = mainContentHeight + mainContent.offset().top,
                  topAdjust = $('#ible-header').height() + 43;
              
              if (sidebarHeight < mainContentHeight) {
                if ((scrollTop+stickyAdHeight) > (mainContentBottomOffset - topAdjust)) {
                  stickyAd.css({top:'auto'}).css({'position':'absolute','bottom':0});
                } else if (scrollTop > (stickyAdTop - topAdjust)) {
                  stickyAd.css({'top':topAdjust+'px', 'position':'fixed'});
                } else { 
                  stickyAd.css({top:'auto'}).css({'position':'relative'});
                }
              }
            });

            // clicking on related instructables changes position of the ad
            $('#seemore-related-ibles').live('click', function(e){
              stickyAdTop = stickyAd.offset().top;
            });         
          });     
        },1250);          
