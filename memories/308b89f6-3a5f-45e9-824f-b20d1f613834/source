    if (typeof notesArray === "undefined")
      window.notesArray = {};
  </script><div class="photoset" data-entry-id="SWWOKSBH5035JJ7" data-entry-url="/id/Arduino-Audio-Input/step1/Preparing-audio-signals-for-Arduino/" id="photoset-SWWOKSBH5035JJ7"><div class="row" style="width:600px;text-align:center;"><a id="photoset-link-F65JAIIH7S5AUWN-0" style="margin-left:10px" class="photoset-link" rel="photoset-gallery-SWWOKSBH5035JJ7" data-notes-lookup-id="F4W2LYPH7A8PO12-0" data-href="/file/F4W2LYPH7A8PO12" data-fancybox-href="/files/deriv/F4W/2LYP/H7A8PO12/F4W2LYPH7A8PO12.LARGE.jpg" href="/file/F4W2LYPH7A8PO12"><div class="photo-container" style="width:600px;"><img class="photo id_F4W2LYPH7A8PO12" data-notes-lookup-id="F4W2LYPH7A8PO12-0" alt="Screen shot 2012-09-27 at 2.25.50 PM.png" src="/files/deriv/F4W/2LYP/H7A8PO12/F4W2LYPH7A8PO12.LARGE.jpg" style="width:600px;" /></div></a></div><div class="row" style="width:600px;height:196px;"><a id="photoset-link-FNGRU3MH7S5AUWO-1" style="margin-left:10px" class="photoset-link" rel="photoset-gallery-SWWOKSBH5035JJ7" data-notes-lookup-id="FWHXKZ2H7A8PO13-1" data-href="/file/FWHXKZ2H7A8PO13" data-fancybox-href="/files/deriv/FWH/XKZ2/H7A8PO13/FWHXKZ2H7A8PO13.LARGE.jpg" href="/file/FWHXKZ2H7A8PO13"><div class="photo-container" style="width:295px;height:196px;"><img class="photo id_FWHXKZ2H7A8PO13 lazyphoto" data-original="/files/deriv/FWH/XKZ2/H7A8PO13/FWHXKZ2H7A8PO13.MEDIUM.jpg" data-notes-lookup-id="FWHXKZ2H7A8PO13-1" alt="Screen shot 2012-09-27 at 2.26.50 PM.png" src="/static/img/pixel.png" style="width:295px;" /><noscript><img class="photo" alt="Screen shot 2012-09-27 at 2.26.50 PM.png" src="/files/deriv/FWH/XKZ2/H7A8PO13/FWHXKZ2H7A8PO13.MEDIUM.jpg" style="width:295px;" /></noscript></div><i class="notes-icon"></i><script type="text/javascript">                
