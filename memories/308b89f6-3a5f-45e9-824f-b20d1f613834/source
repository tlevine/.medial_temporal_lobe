(function($){
  $(function() {
    $('.searchbarTypeSelect').click(function(e){
      e.preventDefault();
      var $link = $(this),
          searchForm = $('#searchbar-form'),
          type = $link.data('typeid'),
          typeInputEl = document.getElementById(type);
               
      $('.searchbarTypeSelect').parent().removeClass('active');
      $link.parent().addClass('active');
      $('.searchbarTypeParam').attr('disabled', true);
      $('#searchbar-active-icon').attr('class', 'active-icon ' + $link.children('i').attr('class'));

      if (type.indexOf(":id") >= 0) {        
        searchForm.attr('action', '/tag/type-id/');
      } else {
        searchForm.attr('action', '/tag/');
        typeInputEl.disabled = false;
      }
    });
    
    $('#searchbar-submitbtn').click(function(e){
      $('#searchbar-form').submit();
    });
  });
})(jQuery);
