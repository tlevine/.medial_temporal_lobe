<div id="answer-8193080" class="answer accepted-answer" data-answerid="8193080" >
    <table>
        <tr>
            <td class="votecell">
                

<div class="vote">
    <input type="hidden" value="8193080">
    <a class="vote-up-off" title="This answer is useful">up vote</a>
